#include <Practica12.h>
#use standard_io(b)
#define VLD 300

void main()
{
   set_tris_b(0x00);

   while(TRUE)
   {
      output_b(0b00000001);
      delay_ms(VLD);
      output_b(0b00000011);
      delay_ms(VLD);
      output_b(0b00000010);
      delay_ms(VLD);
      output_b(0b00000110);
      delay_ms(VLD);
      output_b(0b00000100);
      delay_ms(VLD);
      output_b(0b00001100);
      delay_ms(VLD);
      output_b(0b00001000);
      delay_ms(VLD);
      output_b(0b00001001);
      delay_ms(VLD);
   }

}
